{
  "name": "asynciterator-union",
  "version": "2.1.2",
  "description": "An AsyncIterator for taking the union of different AsyncIterators",
  "main": "index.js",
  "typings": "index",
  "repository": "git@github.com:rubensworks/asynciterator-union.js.git",
  "keywords": [
    "asynciterator",
    "union",
    "roundrobin"
  ],
  "author": "Ruben Taelman <ruben.taelman@ugent.be>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rubensworks/asynciterator-union.js/issues"
  },
  "homepage": "https://github.com/rubensworks/asynciterator-union.js#readme",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "asynciterator": "^2.0.0"
  },
  "devDependencies": {
    "@types/asynciterator": "^1.1.1",
    "@types/jest": "^25.1.0",
    "arrayify-stream": "^1.0.0",
    "coveralls": "^3.0.0",
    "jest": "^26.0.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.0.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.0.3"
  },
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "scripts": {
    "test": "jest ${1}",
    "test-watch": "jest ${1} --watch",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tslint index.ts lib/**/*.ts test/**/*.ts --exclude '**/*.d.ts'",
    "build": "tsc",
    "validate": "npm ls",
    "prepare": "npm run build"
  }
}
